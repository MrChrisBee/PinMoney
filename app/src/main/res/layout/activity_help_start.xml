<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_help"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@mipmap/background"
    tools:context="de.cokuss.chhe.pinmoney.help.HelpActivity">

    <TextView
        android:text="@string/help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/textView3"
        android:textSize="24sp"
        android:textColor="#000000"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Wählen sie einen Empfänger/Konto aus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginStart="33dp"
        android:layout_marginTop="22dp"
        android:id="@+id/textView5" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/rahmen_1"
        android:id="@+id/imageView2"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:layout_toStartOf="@+id/textView3" />

    <TextView
        android:text="Kontoübersicht mit aktuellem Guthaben und Buchungen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="25dp"
        android:layout_alignStart="@+id/textView5"
        android:id="@+id/textView6" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/button_konto_normal"
        android:id="@+id/imageView3"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="28dp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/textView5" />

    <TextView
        android:text="Auszahlung an gewählten Empfänger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView3"
        android:layout_marginTop="35dp"
        android:layout_alignStart="@+id/textView5"
        android:id="@+id/textView7" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/button_ausz_normal"
        android:id="@+id/imageView4"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="25dp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/textView5" />

    <TextView
        android:text="Einzahlung auf Konto des gewählten Empfänger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView4"
        android:layout_marginTop="22dp"
        android:layout_alignStart="@+id/textView5"
        android:id="@+id/textView8" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/button_einz_normal"
        android:id="@+id/imageView5"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="25dp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/textView5" />

</RelativeLayout>
